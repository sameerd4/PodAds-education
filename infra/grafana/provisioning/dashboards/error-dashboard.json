{
  "title": "PodAds Lab - Error Metrics Dashboard",
  "tags": ["podads", "errors", "reliability"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "Error Rate",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(ad_errors_total[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "decimals": 3,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 0.001, "color": "yellow"},
              {"value": 0.01, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "graphMode": "none",
        "colorMode": "value"
      }
    },
    {
      "id": 2,
      "title": "Total Errors (24h)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "sum(increase(ad_errors_total[24h]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "id": 3,
      "title": "HTTP Error Rate",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "rate(ad_http_errors_total[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "decimals": 3
        }
      }
    },
    {
      "id": 4,
      "title": "Error Rate Over Time",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [
        {
          "expr": "rate(ad_errors_total[5m])",
          "legendFormat": "Error Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Errors by Type",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "targets": [
        {
          "expr": "sum(rate(ad_errors_total[5m])) by (error_type)",
          "legendFormat": "{{error_type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      }
    },
    {
      "id": 6,
      "title": "HTTP Errors by Status Code",
      "type": "barchart",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "rate(ad_http_errors_total[5m]) by (status_code)",
          "legendFormat": "{{status_code}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "orientation": "horizontal"
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Errors by Stage",
      "type": "barchart",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "targets": [
        {
          "expr": "sum(rate(ad_errors_total[5m])) by (stage)",
          "legendFormat": "{{stage}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "orientation": "horizontal"
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Error Rate Trends (1h / 6h / 24h)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 18, "x": 0, "y": 20},
      "targets": [
        {
          "expr": "rate(ad_errors_total[5m])",
          "legendFormat": "Last 1h",
          "refId": "A"
        },
        {
          "expr": "rate(ad_errors_total[30m])",
          "legendFormat": "Last 6h (avg)",
          "refId": "B"
        },
        {
          "expr": "rate(ad_errors_total[2h])",
          "legendFormat": "Last 24h (avg)",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth"
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Error Rate vs Request Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 18, "x": 0, "y": 28},
      "targets": [
        {
          "expr": "rate(ad_errors_total[5m])",
          "legendFormat": "Error Rate",
          "refId": "A"
        },
        {
          "expr": "rate(ad_requests_total[5m])",
          "legendFormat": "Request Rate",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth"
          }
        }
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  }
}
