{
  "title": "PodAds Lab - Health & Well-being Dashboard",
  "tags": ["podads", "health", "on-call"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "System Health",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "up{job=\"podads-api\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
          {
            "type": "value",
            "options": {
              "0": {"text": "DOWN", "color": "red"},
              "1": {"text": "UP", "color": "green"}
            }
          }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        }
      },
      "options": {
        "graphMode": "none",
        "colorMode": "value"
      }
    },
    {
      "id": 2,
      "title": "Uptime (24h)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0},
      "targets": [
        {
          "expr": "(sum(up{job=\"podads-api\"}) / count(up{job=\"podads-api\"})) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2
        }
      }
    },
    {
      "id": 3,
      "title": "Request Rate (RPS)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0},
      "targets": [
        {
          "expr": "rate(ad_requests_total[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "decimals": 2
        }
      }
    },
    {
      "id": 4,
      "title": "Fill Rate",
      "type": "gauge",
      "gridPos": {"h": 4, "w": 4, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(ad_decisions_total{outcome=\"fill\"}[5m])) / sum(rate(ad_decisions_total[5m])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 50, "color": "yellow"},
              {"value": 80, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Error Rate",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 16, "y": 0},
      "targets": [
        {
          "expr": "rate(ad_errors_total[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "decimals": 3,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 0.001, "color": "yellow"},
              {"value": 0.01, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Current Latency (p95)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 20, "y": 0},
      "targets": [
        {
          "expr": "rate(ad_decision_latency_ms_seconds_sum[5m]) / rate(ad_decision_latency_ms_seconds_count[5m]) * 1000",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 50, "color": "yellow"},
              {"value": 100, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Active Alerts",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 4},
      "targets": [
        {
          "expr": "count(ALERTS{alertstate=\"firing\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 2, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Latency Trend",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 9, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "rate(ad_decision_latency_ms_seconds_sum[5m]) / rate(ad_decision_latency_ms_seconds_count[5m]) * 1000",
          "legendFormat": "Average Latency",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Fill Rate Trend",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 9, "x": 9, "y": 8},
      "targets": [
        {
          "expr": "sum(rate(ad_decisions_total{outcome=\"fill\"}[5m])) / sum(rate(ad_decisions_total[5m])) * 100",
          "legendFormat": "Fill Rate %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 10,
      "title": "Error Rate Trend",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 9, "x": 18, "y": 8},
      "targets": [
        {
          "expr": "rate(ad_errors_total[5m])",
          "legendFormat": "Error Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 11,
      "title": "Request Rate Trend",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 9, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "rate(ad_requests_total[5m])",
          "legendFormat": "Requests/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 12,
      "title": "Key Metrics Summary",
      "type": "table",
      "gridPos": {"h": 8, "w": 18, "x": 9, "y": 16},
      "targets": [
        {
          "expr": "rate(ad_requests_total[5m])",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "expr": "sum(rate(ad_decisions_total{outcome=\"fill\"}[5m])) / sum(rate(ad_decisions_total[5m])) * 100",
          "format": "table",
          "instant": true,
          "refId": "B"
        },
        {
          "expr": "rate(ad_decision_latency_ms_seconds_sum[5m]) / rate(ad_decision_latency_ms_seconds_count[5m]) * 1000",
          "format": "table",
          "instant": true,
          "refId": "C"
        },
        {
          "expr": "rate(ad_errors_total[5m])",
          "format": "table",
          "instant": true,
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "list"
          }
        }
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  }
}
